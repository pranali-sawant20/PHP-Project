pipeline {
    agent any
    stages{
        stage('git cloned'){
            steps{
                git url:'https://github.com/pranali-sawant20/PHP-Project.git', branch: "master"
              
            }
        }
        stage('Build docker image'){
            steps{
                script{
                    sh 'docker build -t pranalisawant/php-project:v1 .'
                    sh 'docker images'
                }
            }
        }
          stage('Docker login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-pwd', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh "echo $PASS | docker login -u $USER --password-stdin"
                    sh 'docker push pranalisawant/php-project:v1'
                }
            }
        }
        
     stage('Deploy') {
            steps {
                script{
                    sh 'sudo docker run -itd --name My-project-con -p 8089:80 pranalisawant/php-project:v1'
                       }
                    }
                }
    }
}
